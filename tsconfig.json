// tsconfig.json
{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",  // Ensures JSX is compiled correctly
    "moduleResolution": "node",
    "strict": true,  // Enable strict type-checking
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
